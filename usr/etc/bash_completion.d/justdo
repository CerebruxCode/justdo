_justdo ()
{
  local cur prev opts base
  COMPREPLY=()
  cur="${COMP_WORDS[COMP_CWORD]}"
  prev="${COMP_WORDS[COMP_CWORD-1]}"
  all_long_opts="--duration --color --rev-color --width --notify --sound --show --show-percentage --version --help "
  all_short_opts="-d -c -r -w -v -h "
  case "$prev" in
    --color|-c|--rev-color|-r)
      COMPREPLY=( $(compgen -W "Red Green Yellow Blue None" -- "${cur}") )
      return 0
      ;;
    --duration|-d|--width|-w)
      COMPREPLY=( $(compgen -o bashdefault -o default -- "${cur}") )
      return 0
      ;;
    *)
      case "$cur" in
        --*)
          COMPREPLY=( $(compgen -W "${all_long_opts}" -- "${cur}") )
          return 0
          ;;
        -*)
          COMPREPLY=( $(compgen -W "${all_short_opts}" -- "${cur}") )
          return 0
          ;;
        *)
          COMPREPLY=( $(compgen -o bashdefault -o default -- "${cur}") )
          return 0
          ;;
      esac
  esac

}
complete -F _justdo justdo
### END OF CODE GENERATED BY Argbash (sortof) ### ])
